{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Angular Application",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start"],
        "port": 9229,
        "restart": true,
        "protocol": "inspector",
        "skipFiles": ["<node_internals>/**"],
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true,
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  